# IMAP (수신)
IMAP_HOST=imap.zoho.com
IMAP_PORT=993
IMAP_USER=jobs@caia-agent.com
IMAP_PASSWORD=<ZOHO_APP_PASSWORD>

# SMTP (발신)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465                 # ← SSL 기본
SMTP_USER=bot@caia-agent.com  # 또는 jobs@..., 운영 설계에 맞게
SMTP_PASSWORD=<ZOHO_APP_PASSWORD>
# 587을 쓰고 싶다면 ↓ 두 줄 반영
# SMTP_PORT=587
# SMTP_STARTTLS=true

# 브릿지 동작
POLL_INTERVAL_SEC=120
SUBJECT_PREFIX=[CAIA-JOB]
REPLY_FROM=jobs@caia-agent.com    # alias 미등록이면 SMTP_USER와 동일하게 설정

# 젠스파크 전달
ZENSPARK_INBOX=zenspark@caia-agent.com
